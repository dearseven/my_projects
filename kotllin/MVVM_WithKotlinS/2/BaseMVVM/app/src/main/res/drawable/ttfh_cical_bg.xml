<?xml version="1.0" encoding="utf-8"?>


<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">
            <stroke
                android:width="1dp"
                android:color="@color/player_view_bg_color" />
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/player_view_bg_color" />
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>

</layer-list>